<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">chambi</property>
        <property name="hibernate.connection.password">chambi</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/transportdb</property>
        <property name="format_sql">false</property>
        <property name="show_sql">false</property>
        <property name="hibernate.jdbc.batch_size">20</property>
        <mapping class="transport.model.Sistema"/>
        <mapping class="transport.model.Conductor"/>
        <mapping class="transport.model.Camion"/>
        <mapping class="transport.model.Remolque"/>
        <mapping class="transport.model.Bulto"/>
        <mapping class="transport.model.Ciudad"/>
        <mapping class="transport.model.Cliente"/>
        <mapping class="transport.model.Pedido"/>
        <mapping class="transport.model.Ruta"/>
        <mapping class="transport.model.Carretera"/>
        <mapping class="transport.model.Tarifa"/>
        <mapping class="transport.model.HojaRuta"/>
    </session-factory>
</hibernate-configuration>